{
    "version": "1.0.0-*",
    "buildOptions": {
        "emitEntryPoint": true,
        "copyToOutput": {
            "includeFiles": [
                "appsettings.json"
            ]
        }
    },
    "ElasticSearch": {
        "Connection": "http://localhost:9200",
        "RecreateIndex": true,
        "PageSize": 5000,
        "NumberOfReplicas": 2,
        "NumberOfShards": 1
    },
    "ConnectionStrings": {
        "DbConnectionString": "Server=localhost;Database=Northwind;User ID=sa;Password=Password1;"
    },

    "Serilog": {
        "Using": [ "Serilog.Sinks.Async" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Default": "Information",
                "Microsoft": "Information",
                "System": "Information"
            }
        },
        "Enrich": [ "FromLogContext", "WithThreadId", "WithDemystifiedStackTraces" ],
        "WriteTo:Information": {
            "Name": "Async",
            "Args": {
                "Configure": [
                    {
                        "Name": "RollingFile",
                        "Args": {
                            "RestrictedToMinimumLevel": "Information",
                            "pathFormat": "C:\\Applogs\\Indexer-Information-{Date}.log",
                            "rollingInterval": "Day",
                            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{RequestId}] [{ThreadId}] [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        },
        "WriteTo:Error": {
            "Name": "Async",
            "Args": {
                "Configure": [
                    {
                        "Name": "RollingFile",
                        "Args": {
                            "RestrictedToMinimumLevel": "Error",
                            "pathFormat": "C:\\Applogs\\Indexer-Error-{Date}.log",
                            "rollingInterval": "Day",
                            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{RequestId}] [{ThreadId}] [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        },
        "WriteTo:Warning": {
            "Name": "Async",
            "Args": {
                "Configure": [
                    {
                        "Name": "RollingFile",
                        "Args": {
                            "RestrictedToMinimumLevel": "Warning",
                            "pathFormat": "C:\\Applogs\\Indexer-Warning-{Date}.log",
                            "rollingInterval": "Day",
                            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{RequestId}] [{ThreadId}] [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        },
        "WriteTo:Debug": {
            "Name": "Async",
            "Args": {
                "Configure": [
                    {
                        "Name": "RollingFile",
                        "Args": {
                            "RestrictedToMinimumLevel": "Debug",
                            "pathFormat": "C:\\Applogs\\Indexer-Debug-{Date}.log",
                            "rollingInterval": "Day",
                            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{RequestId}] [{ThreadId}] [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{RequestId}] [{ThreadId}] [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}"
                }
            }
        ]
    }
}